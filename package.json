{
    "name": "spellcheck_poc",
    "version": "1.0.0",
    "description": "A modern web-based text editor with real-time writing assistance, featuring next-token prediction, spell checking, and intelligent suggestions to enhance your writing experience.",
    "main": "index.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "lint": "eslint static/**/*.js",
        "lint:fix": "eslint static/**/*.js --fix",
        "format": "prettier --write static/**/*.{js,css,html} *.{md,json}",
        "format:check": "prettier --check static/**/*.{js,css,html} *.{md,json}",
        "code-quality": "npm run lint && npm run format:check",
        "code-fix": "npm run lint:fix && npm run format"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/shaggitza/spellcheck_poc.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "commonjs",
    "bugs": {
        "url": "https://github.com/shaggitza/spellcheck_poc/issues"
    },
    "homepage": "https://github.com/shaggitza/spellcheck_poc#readme",
    "devDependencies": {
        "@eslint/css": "^0.10.0",
        "@eslint/js": "^9.32.0",
        "@eslint/json": "^0.13.1",
        "@eslint/markdown": "^7.1.0",
        "eslint": "^9.32.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.3",
        "globals": "^16.3.0",
        "prettier": "^3.6.2"
    }
}
